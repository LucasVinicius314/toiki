{
  "compileOnSave": true,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "strictPropertyInitialization": false,
    "target": "ES5",
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "outDir": "build/",
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["build/", "node_modules/"],
  "include": ["src/"]
}
